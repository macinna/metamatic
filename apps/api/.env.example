# API Package Configuration Template
# Copy this to .env.local and .env.dev with appropriate values

# API Stage Configuration
API_STAGE=local
AWS_API_GATEWAY_ID=your_api_gateway_id

# Lambda Configuration
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=512
LAMBDA_RUNTIME=python3.13
LAMBDA_ROLE_ARN=arn:aws:iam::your_account:role/MetaMaticLambdaRole

# Authentication Configuration
AUTH_JWT_SECRET=your_jwt_secret_here
AUTH_TOKEN_EXPIRY=86400

# API Gateway Configuration
API_GATEWAY_STAGE=dev
API_THROTTLE_RATE=1000
API_THROTTLE_BURST=2000

# Storage Configuration
S3_BUCKET=metamatic-uploads-bucket
S3_REGION=us-west-2

# Monitoring Configuration
CLOUDWATCH_LOG_GROUP=/aws/lambda/metamatic
CLOUDWATCH_LOG_RETENTION=14
